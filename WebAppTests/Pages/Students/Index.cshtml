@page
@model WebAppTests.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @foreach (var role in item.Role)
                    {
                        @Html.DisplayFor(modelItem => role)
                        @* @if (role != item.Role.)
                        {
                            <span>, </span>
                        } *@
                    }
                </td>
            <td>
                    @if(User.IsInRole("Admin"))
                    {
                    <a class="btn btn-lg btn-success" asp-page="./EditRole" asp-route-id="@item.Id">Изменить роль</a>
                    }
                    <a class="btn btn-lg btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Исправить</a> |
                    <a class="btn btn-lg btn-warning"  asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                    <a class="btn btn-lg btn-danger"  asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
